datasource:
  port: your_db_host_port_no
  database: your_db_name
  image-name: your_db_host
  username: your_db_username
  password: your_db_password

spring:
  datasource:
    url: jdbc:postgresql://${datasource.image-name}:${datasource.port}/${datasource.database}
    username: ${datasource.username}
    password: ${datasource.password}
  jpa:
    properties:
      hibernate:
        jdbc:
          lob:
            non_contextual_creation: true
        dialect: org.hibernate.dialect.PostgreSQLDialect
    hibernate:
      ddl-auto: update



